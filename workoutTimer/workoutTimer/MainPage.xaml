<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="workoutTimer.MainPage">

    <ScrollView>
        <VerticalStackLayout
          VerticalOptions="Center" HorizontalOptions="Center">
            <Label x:Name="exerciseL" Text="Exercise: " />
            <Label x:Name="timerL" Text="00:00:00" />
            <Button x:Name="startB" Text="Start" Clicked="Start_Click" />
            <Button x:Name="pauseB" Text="Pause" Clicked="Pause_Click" />
            <Button x:Name="stopB" Text="Stop" Clicked="Stop_Click" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

