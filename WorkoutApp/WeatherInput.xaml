<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.WeatherInput"
             Title="WeatherInput">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Country:" HorizontalOptions="Start" />
            <Entry x:Name="EntryCountry" Placeholder="Enter Country" />
            <Label Text="City:" HorizontalOptions="Start" Margin="10,0,0,0" />
            <Entry x:Name="EntryCity" Placeholder="Enter City" />
            <Button Text="Get Data" Clicked="OnButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>